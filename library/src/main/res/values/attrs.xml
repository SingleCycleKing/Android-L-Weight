<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RectangleButton">
        <attr name="text" format="string" />
        <attr name="background" format="color" />
        <attr name="rippleSpeed" format="float" />
        <attr name="rippleSize" format="integer" />
        <attr name="rippleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RippleLayout">
        <attr name="layout_background" format="color" />
        <attr name="layout_rippleSpeed" format="float" />
        <attr name="layout_rippleSize" format="integer" />
        <attr name="layout_rippleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FloatButton">
        <attr name="floatButton_rippleSpeed" format="float" />
        <attr name="floatButton_rippleSize" format="integer" />
        <attr name="floatButton_rippleColor" format="color" />
        <attr name="floatButton_icon" format="reference" />
        <attr name="floatButton_background" format="reference" />
    </declare-styleable>
</resources>